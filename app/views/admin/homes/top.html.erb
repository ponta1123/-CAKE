 <div class="container">
   <div class="row">
     <div class="col">
      <h3>注文履歴一覧</h3>
     </div>
   </div>
   <div class="row">
     <div class="col">
       <table cellpadding="15">
         <thead>
           <tr>
             <th>購入日時</th>
             <th>購入者</th>
             <th>注文個数</th>
             <th>注文ステータス</th>
           </tr>
         </thead>
         <tbody>
           <% @orderinformations.each do |information| %>
           <tr>
             <td>
               <%= link_to admin_order_information_path(information.id) do %>
               <%= information.created_at %>
               <% end %>
             </td>
             <td><%= information.name %></td>
             <td>
               <% information.order_products.each do |product| %>
               <% product.amount %>
               <% @sum += product.amount %>
               <% end %>
               <%= @sum %>
             </td>
             <td></td>
           </tr>
           <% @sum = 0 %>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
   <div class="row">
    <div class="col offset-3">
     <%= paginate @orderinformations %>
    </div>
   </div>
 </div>
