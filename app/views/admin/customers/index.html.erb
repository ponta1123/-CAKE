<div class="container">
  <div class="row">
    <div class="bg-light">
      <h3>会員一覧</h3>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
         <tr>
           <td><%= customer.id %></td>
           <td>
             <%= link_to admin_customer_path(customer.id) do %>
             <%= customer.last_name %><%= customer.first_name %>
             <% end %>
             </td>
           <td><%= customer.email %></td>
           <td>
             <% if customer.is_deleted == false %>
             <div class="text-success">
              <%= "有効" %>
             </div>
             <% else %>
             <div class="text-secondary">
              <%= "無効" %>
             </div>
             <% end %>
            </td>
         </tr>
         <% end %>
      </tbody>
    </table>




  </div>
</div>






