<div class="container">
  <div class="row">
    <div class="badge bg-light">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
    </div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

  <div class="row mt-4">
    <%= f.label :会員ID, class: "col-3" %>
    <%= @customer.id%>
  </div>
  <div class="row mt-4">
    <%= f.label :氏名, class: "col-3" %>
    <%= f.text_field :last_name %><%= f.text_field :first_name %>
  </div>
  <div class="row mt-4">
    <%= f.label :フリガナ, class: "col-3" %>
    <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  </div>
  <div class="row mt-4">
    <%= f.label :郵便番号, class: "col-3" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="row mt-4">
    <%= f.label :住所, class: "col-3" %>
    <%= f.text_area :address %>
  </div>
  <div class="row mt-4">
    <%= f.label :電話番号, class: "col-3" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="row mt-4">
    <%= f.label :メールアドレス, class: "col-3" %>
    <%= f.text_field :email %>
  </div>
  <div class="row mt-4">
    <%= f.label :会員ステータス, class: "col-3" %>
    <%= f.radio_button :is_deleted, false %><%= f.label "有効" %>
    <%= f.radio_button :is_deleted, true %><%= f.label "退会" %>
  </div>

  <%= f.submit '変更を保存', class: "col-2 mt-3 offset-3 btn btn-success" %>
  <% end %>
</div>
