<div class="container">
  <div class="row">
    <div class="badge bg-light">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-3">
      会員ID
    </div>
    <div class="col-4">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      氏名
    </div>
    <div class="col-4">
      <%= @customer.last_name %><%= @customer.first_name %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-4">
      <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      郵便番号
    </div>
    <div class="col-4">
      <%= @customer.postal_code %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      住所
    </div>
    <div class="col-4">
      <%= @customer.address %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      電話番号
    </div>
    <div class="col-4">
      <%= @customer.telephone_number %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-4">
      <%= @customer.email %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3">
      会員ステータス
    </div>
    <div class="col-4">
      <% if @customer.is_deleted == false %>
      <div class="text-success">
       <%= "有効" %>
      </div>
      <% else %>
      <div class="text-secondary">
       <%= "無効" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "offset-3 btn btn-success" %>
  </div>

</div>
