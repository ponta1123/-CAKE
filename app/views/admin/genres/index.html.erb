<div class="container mb-5">
  <div class="row">
    <div class="badge bg-light">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>

  <div class="row ml-2 mt-4">
    <%= f.label :ジャンル名, class: "col-2" %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "col-2 offset-2 btn btn-success" %>
  </div>
  <% end %>
</div>

  <div class="container">
    <div class="row">
      <table width="30%">
        <thead bgcolor="whitesmoke">
          <tr align="center">
           <th>ジャンル</th>
           <th></th>
          </tr>
        </thead>
        <tbody>
         <% @genres.each do |genre| %>
         <tr>
         <td><%= genre.name %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>

