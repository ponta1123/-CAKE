<div class="container">
  <div class="row">
    <div class="badge bg-light">
      <h3>ジャンル編集</h3>
    </div>
  </div>

  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>

  <div class="row">
    <div class="col mt-5">
      <%= f.label :ジャンル名, class: "col-2" %>
      <%= f.text_field :name %>
      <%= f.submit '変更を保存', class: " offset-1 btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
