<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div>
  <%= f.label :名前 %>
  <%= f.label :姓 %>
  <%= f.text_field :last_name %>
  <%= f.label :名 %>
  <%= f.text_field :first_name %>
</div>
<div>
  <%= f.label :フリガナ %>
  <%= f.label :セイ %>
  <%= f.text_field :last_name_kana %>
  <%= f.label :メイ %>
  <%= f.text_field :first_name_kana %>
</div>

<div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div>
  <%= f.label :郵便番号ハイフンなし %>
  <%= f.text_field :postal_code %>
</div>

<div>
  <%= f.label :住所 %>
  <%= f.text_area :address %>
</div>

<div>
  <%= f.label :電話番号ハイフンなし %>
  <%= f.text_field :telephone_number %>
</div>




  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<h3>既に登録済みの方</h3>
<p>
<%= link_to "こちら", new_customer_session_path %>からログインしてください。
</p>