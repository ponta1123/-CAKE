<p>ショッピングカート</p>
<p><%= link_to "買い物を続ける", public_items_path %></p>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>

<tbody>

 <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal %></td>
    <td><%= link_to "削除", public_cart_item_path(cart_item.id), method: :delete %></td>
    <% @sum += cart_item.subtotal %>
  </tr>
<% end %>
<p>合計</p>
<%= @sum.to_s(:delimited) %>
</tbody>
</table>
<%= link_to "情報入力に進む", new_public_order_information_path %>
