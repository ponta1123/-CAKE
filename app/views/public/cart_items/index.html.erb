<p>ショッピングカート</p>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>

<tbody>

 <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal %></td>
    <tb><%= link_to "削除", public_cart_item_path(@cart_item.id), method: :delete %></tb>
    <% @sum += cart_item.subtotal %>
  </tr>
<% end %>
<p>合計</p>
<%= @sum %>
</tbody>
</table>
