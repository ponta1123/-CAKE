<div class="container">
  <div class="row mt-4 ml-5">
    <div class="badge bg-light">
      <h4>注文情報入力</h4>
    </div>
  </div>
  <div class="row mt-4">
    <h4>支払い方法</h4>
  </div>
  <%= form_with model: @order, url: public_order_informations_confirm_path, method: :patch  do |f| %>
  <div class="row ml-4">
    <%= f.radio_button :payment_method, OrderInformation.payment_methods.key(0), {:checked => true} %>
    <%= f.label :payment_method_credit_card, OrderInformation.payment_methods_i18n[:credit_card] %>
  </div>
  <div class="row ml-4">
    <%= f.radio_button :payment_method, OrderInformation.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, OrderInformation.payment_methods_i18n[:transfer] %>

  </div>
  <div class="row mt-4">
    <h4>お届け先</h4>
  </div>
  <div class="row ml-4">
    <%= f.radio_button :address_method, 0, {:checked => true} %>
    <%= f.label :address_method_address, "ご自身の住所" %>
  </div>
    <div class="row ml-5">
    <%= "〒" + current_customer.postal_code + current_customer.address %>
    </div>
    <div class="row ml-5 mb-3">
      <%= current_customer.last_name + current_customer.first_name %>
    </div>

  <div class="row ml-4">
    <%= f.radio_button :address_method, 1 %>
    <%= f.label :address_method_address, "登録済み住所" %>
  </div>
  <div class="row ml-5">
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  </div>
  <div class="row ml-4 mt-3">
    <%= f.radio_button :address_method, 2 %>
    <%= f.label :address_method_address, "新しい配送先" %>
  </div>
  <div class="row ml-5">
    <%= f.label :郵便番号 %>
    <div class="col-3 ml-4">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row ml-5 mt-3">
    <%= f.label :住所 %>
    <div class="col-3 ml-4">
      <%= f.text_area :address %>
    </div>
  </div>
  <div class="row ml-5 mt-3">
    <%= f.label :宛名 %>
    <div class="col-3 ml-4">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row mi-5 mt-3">
    <%= f.submit '確認画面へ進む', class: "col-2 offset-2 btn btn-primary" %>
  </div>

  <% end %>
</div>