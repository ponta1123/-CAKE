<div class="container">
  <div class="row offset-1 badge bg-light">
    <h4>マイページ</h4>
  </div>
  <div class="row ml-3 mt-4">
    <div class="col-2">
      <h3>登録情報</h3>
    </div>
    <div class="col-4">
      <%= link_to "編集する", edit_customer_path, class: "offset-2 btn btn-success" %>
    </div>
  </div>
  <div class="row mt-4 ml-3">
  <table border width="70%" height="100%">
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  </div>

  <div class="row ml-3 mt-5">
    <h5>配送先</h5>
    <%= link_to "一覧を見る", addresses_path, class: "offset-1 col-2 btn btn-primary" %>
  </div>
  <div class="row ml-3 mt-3">
    <h5>注文履歴</h5>
    <%= link_to "一覧を見る", order_informations_path, class: "offset-1 col-2 btn btn-primary" %>
  </div>
</div>