<div class="container">
  <div class="row offset-1 badge bg-light">
    <h4>マイページ</h4>
  </div>
  <div class="row ml-3 mt-4">
    <h3>登録情報</h3>
    <%= link_to "編集する", edit_public_customer_path, class: "offset-2 btn btn-success" %>
  </div>
  <div class="row ml-3 mt-5">
    <h5>氏名</h5>
    <div class="col-4 offset-3">
     <%= @customer.last_name %><%= @customer.first_name %>
    </div>
  </div>
  <div class="row ml-3 mt-3">
    <h5>カナ</h5>
    <div class="col-4 offset-3">
      <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
  </div>
  <div class="row ml-3 mt-3">
    <h5>郵便番号</h5>
    <div class="col-3 offset-3">
       <%= @customer.postal_code %>
    </div>
  </div>
  <div class="row ml-3 mt-3">
    <h5>住所</h5>
    <div class="col-4 offset-3">
      <%= @customer.address %>
    </div>
  </div>
  <div class="row ml-3 mt-3">
    <h5>電話番号</h5>
    <div class="col-4 offset-3">
     <%= @customer.telephone_number %>
    </div>
  </div>
  <div class="row ml-3 mt-3">
    <h5>メールアドレス</h5>
    <div class="col-4 offset-3">
     <%= @customer.email %>
    </div>
  </div>
  <div class="row ml-3 mt-5">
    <h5>配送先</h5>
    <%= link_to "一覧を見る", public_addresses_path, class: "offset-1 col-2 btn btn-primary" %>
  </div>
  <div class="row ml-3 mt-3">
    <h5>注文履歴</h5>
  </div>
</div>