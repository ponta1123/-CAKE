  <div class="container">
    <div class="row mt-4 ml-4">
      <div class="col-4">
        <h4>会員情報編集</h4>
      </div>
    </div>
    <%= form_with model: @customer, url: customers_information_path(@customer.id), method: :patch do |f| %>
    <div class="row mt-4">
      <div class="col-2 ml-4">
        <p>氏名</p>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :last_name %>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 ml-4">
        <hp>フリガナ</p>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 ml-4">
        <p>郵便番号</p>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 ml-4">
        <p>住所</p>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_area :address %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 ml-4">
        <p>電話番号</p>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :telephone_number %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-2 ml-4">
        <p>メールアドレス</p>
      </div>
      <div class="col-3 ml-2">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-6">
        <%= f.submit '編集内容を保存', class: "col-4 btn btn-success" %>
      </div>
      <div class="col-5">
        <%= link_to "退会する", customers_unsubscribe_path, class: "col-4 btn btn-danger" %>
      </div>
    </div>
  </div>
  <% end %>