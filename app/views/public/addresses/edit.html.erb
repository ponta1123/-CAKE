<div class="container">
  <div class="row badge bg-light">
    <h3>配送先編集</h3>
  </div>

  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>

  <div class="row ml-3 mt-3">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-3" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="row ml-3 mt-3">
    <%= f.label :住所, class: "col-3" %>
    <%= f.text_area :address %>
  </div>
  <div class="row ml-3 mt-3">
    <%= f.label :宛名, class: "col-3" %>
    <%= f.text_field :name %>
  </div>

  <div class="row offset-4 mt-3">
    <%= f.submit '変更内容を保存', class: "col-3 btn btn-success" %>
  </div>

  <% end %>

</div>